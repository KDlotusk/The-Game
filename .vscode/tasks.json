    "version": "2.0.0",
    "tasks": [
      {
        "label": "Générer le projet",
        "type": "shell",
        "windows": {
          "command": "qmake || make"
        },
        "linux": {
          "command": "qmake  ; make"
        },
        "options": {
          "cwd": "${workspaceFolder}"
        },
        "problemMatcher": [],
        "group": {
          "kind": "build",
          "isDefault": true
        }
      }
    ]
  }